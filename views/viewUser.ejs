<!DOCTYPE html>

<html lang="en">

 <head>

   <meta charset="UTF-8" />

   <meta name="viewport" content="width=device-width, initial-scale=1.0" />

   <title>Admin Maintenance</title>

   <link rel="stylesheet" href="/styles/styles.css" />

 </head>

 <body>

   <header>

     <h1>Admin Dashboard</h1>

     <button>Logout</button>

   </header>

   <div class="dashboard">

     <nav>

       <ul>

         <li><a href="internal.ejs">Home</a></li>

         <li><a href="user.ejs">User Maintenance</a></li>

         <li><a href="events.ejs">Events Maintenance</a></li>

         <li><a href="volunteer.ejs">Volunteer Maintenance</a></li>

       </ul>

     </nav>

   </div>


   <h1 style="text-align: center;">Admin Records</h1>
  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Password</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Alter Data</th>
      </tr>
    </thead>
    <tbody>
      <% if (Admin.length > 0) { %>
        <% Admin.forEach(row => { %>
          <tr>
            <td><%= row.Username %></td>
            <td> <%= row.Password %></td>
            <td> <%= row.AdminFirstName %></td>
            <td> <%= row.AdminLastName %></td>
            <td>
              <form action="/editUser/<%= row.UserID %>" method="GET" style="display:inline;">
                <button type="submit">Edit</button>
              </form>
              <form action="/deleteUser/<%= row.UserID %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="7">No data available</td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <form action="/addUser" method="GET" style="display: flex; justify-content: center; margin: 20px 0;">
    <button type="submit">Add</button>
  </form>

   <footer>&copy; 2024 The Turtle Shelter Project</footer>

 </body>

</html>