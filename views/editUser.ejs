       </ul>

     </nav>

   </div>


   <!-- Volunteer Form -->
   <div class="volunteer-form">

        <h3>Change User Information</h3>

     <form action="/editUser/<%=Admin.UserID%>" method="post">

       <br>
       <label for="Username">Username</label>
       <input type="text" id="Username" name="Username" value="<%= Admin.Username%>" required/>

       <br>
       <label for="Password">Password</label>
       <input type="text" id="Password" name="Password" value="<%= Admin.Password%>" required/>

       <br>
       <label for="AdminFirstName">First Name</label>
       <input type="text" id="AdminFirstName" name="AdminFirstName" value="<%= Admin.AdminFirstName%>" required oninput="this.value = this.value.toUpperCase()"/>

       <br>
       <label for="AdminLastName">Last Name</label>
       <input type="text" id="AdminLastName" name="AdminLastName" value="<%= Admin.AdminLastName%>" required oninput="this.value = this.value.toUpperCase()"/>

       <br>
        <button type="submit">Submit</button>

     </form>

   </div>

